<h1>Nuevo </h1>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
        </div>
        <div class="form-group">
          <%= f.number_field :price, class: "form-control input-lg", placeholder: "Ingresa el precio" %>
        </div>
        <div class="form-group">
         <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
        </div>
        <div>
          <%= f.submit "Crear", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>